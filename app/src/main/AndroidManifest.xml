<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.hse.android.project.easyenglish">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/easy_english"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.games.SynonymsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.ChoosePhraseListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.games.WordPuzzleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.games.MatchingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.EditListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.LearnWordsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.WordListEditorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.games.ChooseDefinitionActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.GameActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.menues.MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.games.LetterPuzzleActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.games.WordChainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.DictionaryActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.StatisticsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.menues.LocalGamesMenuActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.menues.GamesMenuActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>