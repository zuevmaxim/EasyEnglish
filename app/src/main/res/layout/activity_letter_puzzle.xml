<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LetterPuzzleActivity">

    <TextView
        android:id="@+id/textView"
        android:text="@string/app_name"
        style="@style/EasyEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:text="@string/letter_puzzle"
        style="@style/GameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        style="@style/MainLinearLayout"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:id="@+id/word_task_text"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:gravity="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/answer_text"
            style="@style/EditableText"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0.29"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="@string/enter_word" />

        <Button
            android:id="@+id/check_answer_button"
            style="@style/GroupedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="@string/check_answer" />


        <LinearLayout
            style="@style/InnerLinearLayout"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rules_button"
                style="@style/GroupedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rules" />

            <Button
                android:id="@+id/end_game_button"
                style="@style/GroupedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_game"/>

            <Button
                android:id="@+id/hints_button"
                style="@style/GroupedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hints" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>