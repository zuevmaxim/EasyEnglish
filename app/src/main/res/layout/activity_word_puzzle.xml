<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordPuzzleActivity">


    <TextView
        android:id="@+id/textView"
        style="@style/EasyEnglish"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/GameTitle"
        android:text="@string/word_puzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        style="@style/MainLinearLayout"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <ru.hse.android.project.easyenglish.DragAndDropListView
            android:id="@+id/drag_and_drop_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/check_answer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer_letter_puzzle_text"
            app:layout_constraintVertical_bias="0.166" />

        <LinearLayout
            style="@style/MainLinearLayout"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="0.2"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/end_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_letter_puzzle_game"/>

            <Button
                android:id="@+id/show_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rules" />

            <Button
                android:id="@+id/show_hints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hints" />

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>